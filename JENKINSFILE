pipeline {

    agent any
    environment {
        DOCKER_USER = credentials('DOCKER_USER')
        DOCKER_PASSWORD = credentials('DOCKER_PASSWORD')
    }

    stages {

        stage('Build') {
            steps {
                sh '''
                    ./scripts/build.sh
                '''
            }
            post {
                always {
                    echo 'build completed'
                }
            }
        }

        stage('Test') {
            steps {
                sh './scripts/test.sh'
            }

            post {
                always {
                    echo 'test completed'
                }
            }
        }

        stage('Aquascanner') {
            aquaMicroscanner imageName: 'fqdnsan_scan:$BUILD_ID', notCompliesCmd: 'exit 1', onDisallow: 'fail'
            }

            post {
                always {
                    echo 'test completed'
                }
            }
        }
        stage('Push') {
            steps {
                sh './scripts/push.sh'
            }
            post {
                always {
                    echo 'Push completed'
                }
            }
        }

        stage('Deploy') {
            steps {
                sh './scripts/deploy.sh'
            }
            post {
                always {
                    echo 'Deploy completed'
                }
            }
        }
    }
}
