pipeline {

    agent any
    environment {
        DOCKER_USER = credentials('DOCKER_USER')
        DOCKER_PASSWORD = credentials('DOCKER_PASSWORD')
    }

    stages {

        stage('Build') {
            steps {
                sh '''
                    ./scripts/build.sh
                '''
            }
            post {
                always {
                    echo 'build completed'
                }
            }
        }

        stage('Test') {
            steps {
                sh './scripts/test.sh'
            }

            post {
                always {
                    echo 'test completed'
                }
            }
        }

        stage('Push') {
            steps {
                sh './scripts/push.sh'
            }
        }

        stage('Deploy') {
            steps {
                sh './scripts/deploy.sh'
            }
        }
    }
}
